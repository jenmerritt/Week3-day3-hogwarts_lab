<div id="main">
<form method="post" action="/students/<%= @student.id %>" id="edit-form">
  <label for="first-name">First Name</label>
  <input type="text" name="first_name" id="first-name" value="<%=@student.first_name%>" class="form-item">
  <br>
  <label for="last-name">Last Name</label>
  <input type="text" name="last_name" id="last-name" value="<%=@student.last_name%>" class="form-item">
  <br>
  <label for="house">Select a House</label>
    <select id="house" name="house_id" class="form-item">
      <% for house in @houses%>
      <option value="<%= house.id %>"<%= 'selected' if @student.house_id == house.id%>><%= house.name.capitalize %></option>
      <% end %>
    </select>
    <br>
    <label for="age">Age</label>
      <input type="number" name="age" id="age" value="<%= @student.age%>" class="form-item">
      <br>
      <input type="submit" value="Update Student" class="student-buttons">
</form>
</div>
